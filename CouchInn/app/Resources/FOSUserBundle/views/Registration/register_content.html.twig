{% trans_default_domain 'FOSUserBundle' %}



{% block panelbody %}
    <div class="formulario" xmlns="http://www.w3.org/1999/html">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="main container">
            <div class="col-lg-5">
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, { 'attr' : {'class' : 'form-control','placeholder' : 'Ingrese un correo electrónico'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username, { 'attr' : {'class' : 'form-control','placeholder' : 'Ingrese un nombre de usuario'} })}}
                </div>


                <div class="form-group">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, { 'attr' : {'class' : 'form-control'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, { 'attr' : {'class' : 'form-control'} })}}
                </div>

                <div class="form-group">
                    {{ form_label(form.pregunta) }}
                    {{ form_widget(form.pregunta, { 'attr' : {'class' : 'form-control','placeholder' : 'Ingrese una pregunta'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.respuesta) }}
                    {{ form_widget(form.respuesta, { 'attr' :  {'class' : 'form-control','placeholder' : 'Ingrese la respuesta a la pregunta anterior'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.fechaDeNacimiento) }}
                    {{ form_widget(form.fechaDeNacimiento) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.pais) }}
                    {{ form_widget(form.pais, { 'attr' : {'class' : 'form-control'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.provincia) }}
                    {{ form_widget(form.provincia, { 'attr' :  {'class' : 'form-control','placeholder' : 'Ingrese una Provincia'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.localidad) }}
                    {{ form_widget(form.localidad, { 'attr' :  {'class' : 'form-control','placeholder' : 'Ingrese una Localidad'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.calle) }}
                    {{ form_widget(form.calle, { 'attr' :  {'class' : 'form-control','placeholder' : 'Ingrese una Dirección'} })}}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
{{ form_end(form) }}

