<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/jQuery.js"></script>
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet" type="text/css">
    <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/base.css') }}" rel="stylesheet" type="text/css">

    {% block javascripts %}
    {% endblock %}

    {% block estilos %}
    {% endblock %}

    <title>{% block titulo %}CouchInn{% endblock %}</title>
</head>
<body>
    <div class="cover">
        <div class="cover-image" style="background-image: url('images/Paris.jpg')">
        </div>
        {% block body %}

            {% block menu %}
                <nav class="navbar navbar-static-top" role="navigation" style="padding: 50px 100px">
                    <div class="navbar-header btn-group">
                        {% block menupublico %}
                            <a href="{{ path('_home') }}" class="btn btn-primary">Home</a>
                            <a href="{{ path('_listaPubli') }}" class="btn btn-default">Publicaciones</a>
                            <a href="{{ path('_listaDeUsuarios') }}" class="btn btn-default">Usuarios</a>
                            <a href="#" class="btn btn-default">Contacto</a>
                        {% endblock %}
                    </div>
                    {% block menuusuario %}
                        <div class="dropdown navbar-right">
                            {% if is_granted('ROLE_USER') %}
                                <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    <span class="glyphicon glyphicon-chevron-down"></span> Mi perfil
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Ver mi informacion</a></li>
                                    <li><a href="{{ path('_modificar') }}">Modificar mi Perfil</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">Cerrar Sesión</a></li>
                                </ul>
                            {% else %}
                                <a href="{{ path('fos_user_security_login') }}" class="btn btn-success">Iniciar Sesión</a>
                                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-danger">Registrarme</a>
                            {% endif %}
                        </div>
                    {% endblock %}
                </nav>
            {% endblock %}

            {% block seccion %}
            <div class="col-md-12 text-center" style="padding: 100px">
                <div class="container">
                {% block seccioncentro %}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 style="text-align: left">{% block panelhead %}{% endblock %}</h4>
                        </div>

                        <div class="panel-body" style="text-align: left">
                            {% block panelbody %}
                            {% endblock %}
                        </div>
                    </div>
                {% endblock %}
                </div>
            </div>
            {% endblock %}

        {% endblock %}
    </div>
    {% block footer %}
        <footer class="section section-primary">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 text-center">
                        <div class="col-sm-8">
                            <img src="{{ asset('images/CouchInn logo.png') }}" class="img-responsive">
                            {% block footerInfoA %}
                                <p>hello!</p>
                            {% endblock %}
                        </div>
                    </div>
                    <div class="col-sm-6 text-center">
                        {% block footerInfoB %}
                            <p>The website for travelers..</p>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
</body>
</html>
