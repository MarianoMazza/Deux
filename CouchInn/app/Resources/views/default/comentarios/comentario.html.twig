{% extends 'base.html.twig' %}

{% block panelhead %}Comentario{% endblock %}

{% block panelbody %}
    <div class="formulario">


        {{ form_start(form, {'attr' : {'role' : 'form'}}) }}
        <div class="main container">
            <div class="col-md-5">
                <div class="form-group">
                    {{ form_label(form.comentario) }}
                    {{ form_widget(form.comentario, { 'attr' : {'class' : 'form-control','placeholder' : 'Comentar'} })}}
                </div>
                <div class="form-group">
                    {{ form_label(form.Comentar) }}
                    {{ form_widget(form.Comentar, { 'attr' : {'class' : 'btn label-default'} }) }}
                    <a href='{{ path('_listaPubli') }}' class="btn active">Cancelar</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

