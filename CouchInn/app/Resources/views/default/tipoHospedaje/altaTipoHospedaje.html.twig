{% extends 'base.html.twig' %}

{% block panelhead %}Agregar un Tipo de Hospedaje{% endblock %}

{% block panelbody %}
    <div class="formulario">


        {{ form_start(form, {'attr' : {'role' : 'form'}}) }}
        <div class="main container">
            <div class="col-md-5">
                <div class="form-group">
                    {{ form_label(form.tipo) }}
                    {{ form_widget(form.tipo, { 'attr' : {'class' : 'form-control','placeholder' : 'Tipo de hospedaje'} })}}
                 </div>
                <div class="form-group">
                    {{ form_label(form.Aceptar) }}
                    {{ form_widget(form.Aceptar, { 'attr' : {'class' : 'btn label-default'} }) }}
                    <a href='{{ path('_tipos') }}' class="btn active">Cancelar</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}