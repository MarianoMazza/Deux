{% extends 'base.html.twig' %}

{% block panelhead %}Responder una Pregunta{% endblock %}

{% block panelbody %}
    <div class="formulario">


        {{ form_start(edit_form, {'attr' : {'role' : 'form'}}) }}
        <div class="main container">
            <div class="col-md-5">
                <div class="form-group">
                    {{ form_label(edit_form.respuesta) }}
                    {{ form_widget(edit_form.respuesta, { 'attr' : {'class' : 'form-control','placeholder' : 'Escribe la respuessta'} })}}
                </div>
                <div class="form-group">

                    {{ form_widget(edit_form.Responder, { 'attr' : {'class' : 'btn label-default'} }) }}
                    <a href='{{ path('_listaPubli') }}' class="btn active">Cancelar</a>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}