{% extends 'base.html.twig' %}

{% block panelhead %}Seleccione las fechas entre las que desea conocer las ganancias{% endblock %}

{% block panelbody %}
    <div class="formulario col-sm-6">
        {{ form_start(form) }}
            {{ form_row(form) }}
            <br>
            <input type="submit" value="Aceptar" class="btn btn-info">
            <a href='{{ path('_listaPubli') }}' class="btn btn-default">Cancelar</a>
        {{ form_end(form) }}
    </div>
    <div class="col-sm-6 pull-right">
        <label>Total de ganancias durante el per√≠odo elegido:</label>${{ total }}
    </div>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/datePicker.css') }}" />
    {% endblock %}
    {% block javascripts %}

        <script type="text/javascript" src="{{ asset('js/jquery-1.4.2.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/date.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.datePicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/datepicker.js') }}"></script>
    {% endblock %}
{% endblock %}

